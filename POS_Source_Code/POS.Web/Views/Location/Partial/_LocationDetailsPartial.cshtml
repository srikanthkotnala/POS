@using POS.Entity.Entities;
@using POS.Util.Model;
@model LocationModel
    
@*Partial view for location details. Created by Srikanth.*@
<div id="updatedMessage"></div>
<div id="loader" style="display:none">Loading...</div>

@{ string disabled=string.Empty;}
@if (Model != null)
{
    if (!string.IsNullOrEmpty(Model.LocationID))
    {
        disabled = "disabled";
        <div class="mrg_left_5per"><span class="">Update @Model.LocationDesc Details</span> </div>
    }
    else
    {
        <div class="mrg_left_5per"><span class="font_med">Add New Store/Location</span></div>
    }
}
else
{
    <div class="mrg_left_5per"><h3>Add New Store/Location</h3></div>
}
@using (Ajax.BeginForm("InsertOrUpdateLocation", "Location", new AjaxOptions
{
    InsertionMode = InsertionMode.Replace,
    UpdateTargetId = "updatedMessage",
    LoadingElementId = "loader"
}))
{

    <div class="col-lg-12 pad_2per" >
        <div class="col-lg-12 pad_1perdiv spn_lebl">
            
            <div class="col-lg-12"><div class="col-lg-3"><span class="spn_lebl">Location ID :</span></div><div class="col-lg-6">@Html.TextBoxFor(e => e.LocationID, new { @class = "bold",@title="Please Enter Location ID"})</div>@Html.ValidationMessageFor(e => e.LocationID, null, new { @class = "err_mgs" })</div>
            <div class="col-lg-12 "><div class="col-lg-3"><span>Cost Center :</span></div><div class="col-lg-6">@Html.TextBoxFor(e => e.CostCenter)</div>@Html.ValidationMessageFor(e => e.CostCenter, null, new { @class = "err_mgs" })</div>
            <div class="col-lg-12"><div class="col-lg-3"><span>Name :</span></div><div class="col-lg-6">@Html.TextBoxFor(e => e.LocationDesc)</div>@Html.ValidationMessageFor(e => e.LocationDesc, null, new { @class = "err_mgs" })</div>
        </div>
        <div class="col-lg-12 pad_1perdiv spn_lebl">
            <div class="col-lg-12"><div class="col-lg-3"><span>Address :</span></div><div class="col-lg-6">@Html.TextBoxFor(e => e.Address1)</div>@Html.ValidationMessageFor(e => e.Address1, null, new { @class = "err_mgs" })</div>
            <div class="col-lg-12"><div class="col-lg-3"><h5></h5></div><div class="col-lg-6">@Html.TextBoxFor(e => e.Address2)</div></div>
            <div class="col-lg-12"><div class="col-lg-3"><h5></h5></div><div class="col-lg-6">@Html.TextBoxFor(e => e.Address3)</div></div>
            <div class="col-lg-12"><div class="col-lg-3"><span>Postal Code:</span></div><div class="col-lg-6">@Html.TextBoxFor(e => e.POBox)</div>@Html.ValidationMessageFor(e => e.POBox, null, new { @class = "err_mgs" })</div>
            <div class="col-lg-12"><div class="col-lg-3"><span>Region:</span></div><div class="col-lg-6">@Html.TextBoxFor(e => e.Region)</div>@Html.ValidationMessageFor(e => e.City, null, new { @class = "err_mgs" })</div>
            <div class="col-lg-12"><div class="col-lg-3"><span>City:</span></div><div class="col-lg-6">@Html.TextBoxFor(e => e.City)</div>@Html.ValidationMessageFor(e=>e.City,null,new { @class= "err_mgs" })</div>
            <div class="col-lg-12"><div class="col-lg-3"><span>Country:</span></div><div class="col-lg-6">@Html.TextBoxFor(e => e.Country)</div></div>
        </div>
        <div class="col-lg-12">
            <div>
                @*Google Maps*@
            </div>
            <div class="pad_1perdiv spn_lebl">
                <div class="col-lg-12"><div class="col-lg-3"><span>Contact Person :</span></div><div class="col-lg-6">@Html.TextBoxFor(e => e.Contact)</div></div>
                <div class="col-lg-12"><div class="col-lg-3"><span>Telephone :</span></div><div class="col-lg-6">@Html.TextBoxFor(e => e.Phone)</div>@Html.ValidationMessageFor(e => e.Phone, null, new { @class = "err_mgs" })</div>
                <div class="col-lg-12"><div class="col-lg-3"><span>Fax :</span></div><div class="col-lg-6">@Html.TextBoxFor(e => e.Fax)</div>@Html.ValidationMessageFor(e => e.Fax, null, new { @class = "err_mgs" })</div>
                <div class="col-lg-12"><div class="col-lg-3"><span>Loan Amount:</span></div><div class="col-lg-6">@Html.TextBoxFor(e => e.CashLoan)</div>@Html.ValidationMessageFor(e => e.CashLoan, null, new { @class = "err_mgs" })</div>
            </div>
        </div>
        <div class="col-lg-12">
            <div class="col-lg-3"><h5></h5></div>
            <div class="btn-group-lg" role="group" aria-label="Large button group">
                <input type="submit"  class="btn btn-default btn_inpt_sumbit" value="Save" />
                <button  type="button" class="btn btn-danger btn_inpt_cancel">Cancel</button>
            </div>
        </div>
    </div>
}