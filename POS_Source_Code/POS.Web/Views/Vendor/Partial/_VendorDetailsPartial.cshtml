
@using POS.Entity.Entities;
@using POS.Util.Model;
@model VendorModel

@*Partial view for location details. Created by Srikanth.*@
<div id="updatedMessage"></div>
<div id="loader" style="display:none">Loading...</div>

@{ string disabled = string.Empty;}
@if (Model != null)
{
    if (!string.IsNullOrEmpty(Model.VendorID))
    {
        disabled = "disabled";
        <div class="mrg_left_5per"><h3>Update @Model.Name1 Details</h3> </div>
    }
    else
    {
        <div class="mrg_left_5per"><h3>Add New Store/Location</h3></div>
    }
}
else
{
    <div class="mrg_left_5per"><h3>Add New Store/Location</h3></div>
}
@using (Ajax.BeginForm("InsertOrUpdateVendor", "Vendor", new AjaxOptions
{
    InsertionMode = InsertionMode.Replace,
    UpdateTargetId = "updatedMessage",
    LoadingElementId = "loader"
}))
{

    <div class="col-lg-12 pad_2per">
        <div class="col-lg-12 pad_1perdiv">
            <div class="col-lg-12"><div class="col-lg-3"><h5>Vendor ID :</h5></div><div class="col-lg-6">@Html.TextBoxFor(e => e.VendorID, new { @class = "bold", @title = "Please Enter Location ID" })</div>@Html.ValidationMessageFor(e => e.VendorID, null, new { @class = "err_mgs" })</div>
            <div class="col-lg-12 "><div class="col-lg-3"><h5>Vendor Name :</h5></div><div class="col-lg-6">@Html.TextBoxFor(e => e.Name1)</div>@Html.ValidationMessageFor(e => e.Name1, null, new { @class = "err_mgs" })</div>
        </div>
        <div class="col-lg-12 pad_1perdiv">
            <div class="col-lg-12"><div class="col-lg-3"><h5>Address :</h5></div><div class="col-lg-6">@Html.TextBoxFor(e => e.Address1)</div>@Html.ValidationMessageFor(e => e.Address1, null, new { @class = "err_mgs" })</div>
            <div class="col-lg-12"><div class="col-lg-3"><h5></h5></div><div class="col-lg-6">@Html.TextBoxFor(e => e.Address2)</div></div>
            <div class="col-lg-12"><div class="col-lg-3"><h5></h5></div><div class="col-lg-6">@Html.TextBoxFor(e => e.Address3)</div></div>
            <div class="col-lg-12"><div class="col-lg-3"><h5>Postal Code:</h5></div><div class="col-lg-6">@Html.TextBoxFor(e => e.POBox)</div>@Html.ValidationMessageFor(e => e.POBox, null, new { @class = "err_mgs" })</div>
            <div class="col-lg-12"><div class="col-lg-3"><h5>Region:</h5></div><div class="col-lg-6">@Html.DropDownListFor(e => e.Region,new SelectList(Model.LRegion,"RegionId", "RegionName"))</div>@Html.ValidationMessageFor(e => e.Region, null, new { @class = "err_mgs" })</div>
            <div class="col-lg-12"><div class="col-lg-3"><h5>City:</h5></div><div class="col-lg-6">@Html.DropDownListFor(e=>e.City,new SelectList(Model.LCity,"CityID","CityName"))</div>@Html.ValidationMessageFor(e => e.City, null, new { @class = "err_mgs" })</div>
            <div class="col-lg-12"><div class="col-lg-3"><h5>Country:</h5></div><div class="col-lg-6">@Html.DropDownListFor(e => e.Country,new SelectList(Model.LCountry,"CountryId", "CountryName"))</div>@Html.ValidationMessageFor(e => e.Country, null, new { @class = "err_mgs" })</div>
        </div>
        <div class="col-lg-12">
            <div>
                @*Google Maps*@
            </div>
            <div class="pad_1perdiv">
                <div class="col-lg-12"><div class="col-lg-3"><h5>Contact Person :</h5></div><div class="col-lg-6">@Html.TextBoxFor(e => e.Contact)</div></div>
                <div class="col-lg-12"><div class="col-lg-3"><h5>Telephone :</h5></div><div class="col-lg-6">@Html.TextBoxFor(e => e.Phone)</div>@Html.ValidationMessageFor(e => e.Phone, null, new { @class = "err_mgs" })</div>
                <div class="col-lg-12"><div class="col-lg-3"><h5>Fax :</h5></div><div class="col-lg-6">@Html.TextBoxFor(e => e.Fax)</div>@Html.ValidationMessageFor(e => e.Fax, null, new { @class = "err_mgs" })</div>
            </div>
        </div>
        <div class="col-lg-12">
            <div class="col-lg-3"><h5></h5></div>
            <div class="btn-group-lg" role="group" aria-label="Large button group">
                <input type="submit" class="btn btn-default btn_inpt_sumbit" value="Save" />
                <button type="button" class="btn btn-default btn_inpt_cancel">Cancel</button>
            </div>
        </div>
    </div>
}